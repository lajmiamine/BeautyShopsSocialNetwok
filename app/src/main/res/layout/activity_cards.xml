<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    tools:context=".MainActivity">

    <!-- The toolbar and main content view -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <FrameLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:id="@+id/statusBar4000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusBarHeight"
                android:background="@color/inset"/>

            <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_below="@+id/statusBar"
                android:background="?attr/colorPrimary"
                android:translationZ="4dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            <FrameLayout
                android:id="@+id/statusBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusBarHeight"
                android:background="?colorPrimaryDark"
                android:translationZ="4dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewThemeDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:text="Choose your Instrests"
            android:layout_marginBottom="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/md_text" />

        <FrameLayout
            android:background="@color/md_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/relativeLayoutCardViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="5">

                <com.andexert.library.RippleView>
                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view1"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:stateListAnimator="@anim/raise"
                        card_view:cardBackgroundColor="@color/md_red_400"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="2dp">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/md_text_white"
                            android:text="Shopping" />
                    </android.support.v7.widget.CardView>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView>
                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view2"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="24dp"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:stateListAnimator="@anim/raise"
                        card_view:cardBackgroundColor="@color/md_blue_400"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="2dp">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/md_text_white"
                            android:text="Accommodation"
                            android:textSize="10dp" />
                    </android.support.v7.widget.CardView>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView>
                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view3"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_row="1"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_column="0"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:stateListAnimator="@anim/raise"
                        card_view:cardBackgroundColor="@color/md_green_400"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="2dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/md_text_white"
                            android:text="Car rental" />
                    </android.support.v7.widget.CardView>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView>
                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view4"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="24dp"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:stateListAnimator="@anim/raise"
                        card_view:cardBackgroundColor="@color/md_orange_400"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="2dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/md_text_white"
                            android:text="Gastronomy" />
                    </android.support.v7.widget.CardView>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView>
                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view5"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="12dp"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:stateListAnimator="@anim/raise"
                        card_view:cardBackgroundColor="@color/md_pink_400"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="2dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/md_text_white"
                            android:text="Events" />
                    </android.support.v7.widget.CardView>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView>
                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view6"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_row="2"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_column="1"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:stateListAnimator="@anim/raise"
                        card_view:cardBackgroundColor="@color/md_indigo_400"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="2dp">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/md_text_white"
                            android:text="Police Station" />
                    </android.support.v7.widget.CardView>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView>
                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view7"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_row="3"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_column="0"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:stateListAnimator="@anim/raise"
                        card_view:cardBackgroundColor="@color/md_brown_400"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="2dp">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/md_text_white"
                            android:text="Post Office" />
                    </android.support.v7.widget.CardView>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView>
                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view8"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_row="3"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_column="1"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:stateListAnimator="@anim/raise"
                        card_view:cardBackgroundColor="@color/md_blue_grey_400"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="2dp">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/md_text_white"
                            android:text="Health Care" />
                    </android.support.v7.widget.CardView>
                </com.andexert.library.RippleView>

                <com.andexert.library.RippleView>
                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view9"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_row="4"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_column="0"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:stateListAnimator="@anim/raise"
                        card_view:cardBackgroundColor="@color/md_falcon_400"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="2dp">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/md_text_white"
                            android:text="Services" />
                    </android.support.v7.widget.CardView>
                </com.andexert.library.RippleView>

            </GridLayout>

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Go!"
            android:id="@+id/goButton"
            android:layout_gravity="right" />


    </LinearLayout>

    <!-- The navigation drawer -->

</android.support.v4.widget.DrawerLayout>


